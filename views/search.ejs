<!doctype html>
<html>
  <head>
    <title><%= shopName %></title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  
  <body>

    <div class="conbini-bar"></div>

    <!-- Navigation bar -->
    <header class="main-container">
      <nav class="nav">
        <a href="/" class="logo"><%= shopName %></a>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/register">Register</a></li>
          <li><a href="/search">Search</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/survey" class="survey-link">Survey</a></li>
        </ul>
      </nav>
    
    </header>

    <!-- Page content -->
    <div class="container">
      <h1>Search for product</h1>

      <form action="/search_result" method="GET">

        <label for="search_name">Name</label>
        <input id="search_name" type="text" name="search_text" placeholder="Product Name">

        <label for="search_box">Category</label>
        <input id="search_box" type="text" name="category" placeholder="Category">

        <input type="submit" value="OK">
      </form>
    </div>

  </body>
</html>
